<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.1" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd">
	<managed-bean>
		<managed-bean-name>signupBean</managed-bean-name>
		<managed-bean-class>br.tweetme.beans.SignupBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>postBean</managed-bean-name>
		<managed-bean-class>br.tweetme.beans.PostBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>profileBean</managed-bean-name>
		<managed-bean-class>br.tweetme.beans.ProfileBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>searchBean</managed-bean-name>
		<managed-bean-class>br.tweetme.beans.SearchBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>userBean</managed-bean-name>
		<managed-bean-class>br.tweetme.beans.UserBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>

	<navigation-rule>
		<from-view-id>/pages/login.jsp</from-view-id>
		<navigation-case>
			<from-action>#{signupBean.emailValidate}</from-action>
			<from-outcome>continue</from-outcome>
			<to-view-id>/pages/cadastro.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{loginBean.signin}</from-action>
			<from-outcome>continue</from-outcome>
			<to-view-id>/pages/user/home.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/pages/cadastro.jsp</from-view-id>
		<navigation-case>
			<from-action>#{signupBean.signup}</from-action>
			<from-outcome>continue</from-outcome>
			<to-view-id>/pages/user/home.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{loginBean.signin}</from-action>
			<from-outcome>continue</from-outcome>
			<to-view-id>/pages/user/home.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/pages/user/home.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{postBean.toPost}</from-action>
			<from-outcome>continue</from-outcome>
			<to-view-id>/pages/user/home.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/pages/user/reply.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{postBean.toPost}</from-action>
			<from-outcome>continue</from-outcome>
			<to-view-id>/pages/user/profile.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/pages/user/profile.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{profileBean.follow()}</from-action>
			<from-outcome>profile</from-outcome>
			<to-view-id>/pages/user/profile.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{profileBean.unfollow()}</from-action>
			<from-outcome>profile</from-outcome>
			<to-view-id>/pages/user/profile.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<navigation-case>
			<from-action>#{loginBean.logout}</from-action>
			<from-outcome>outcome</from-outcome>
			<to-view-id>/pages/login.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{profileBean.goToProfile}</from-action>
			<from-outcome>profile</from-outcome>
			<to-view-id>/pages/user/profile.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{profileBean.goToHome}</from-action>
			<from-outcome>home</from-outcome>
			<to-view-id>/pages/user/home.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{profileBean.goToFollowing}</from-action>
			<from-outcome>following</from-outcome>
			<to-view-id>/pages/user/following.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{profileBean.goToFollowers}</from-action>
			<from-outcome>followers</from-outcome>
			<to-view-id>/pages/user/followers.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{profileBean.goToSearch}</from-action>
			<from-outcome>search</from-outcome>
			<to-view-id>/pages/user/search.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{profileBean.goToSettings}</from-action>
			<from-outcome>settings</from-outcome>
			<to-view-id>/pages/user/settings.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{postBean.reply}</from-action>
			<from-outcome>post</from-outcome>
			<to-view-id>/pages/user/reply.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{userBean.change}</from-action>
			<from-outcome>settings</from-outcome>
			<to-view-id>/pages/user/settings.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>


	<render-kit>
		<renderer>
			<component-family>javax.faces.Input</component-family>
			<renderer-type>javax.faces.Text</renderer-type>
			<renderer-class>br.tweetme.renderers.InputRenderer</renderer-class>
		</renderer>
		<renderer>
			<component-family>javax.faces.Input</component-family>
			<renderer-type>javax.faces.Secret</renderer-type>
			<renderer-class>br.tweetme.renderers.InputSecretRenderer</renderer-class>
		</renderer>
	</render-kit>
	<application>
		<locale-config>
			<default-locale>en</default-locale>
			<supported-locale>pt_br</supported-locale>
		</locale-config>
		<resource-bundle>
			<base-name>br.tweetme.beans.messages</base-name>
			<var>msg</var>
		</resource-bundle>
	</application>
</faces-config>
